<div class="container text-center" style="height: 100vh">
  <h1>Goals</h1>
  <form action="/user_goals" method="post">
    <% counter=0 %>
    <ul>
      <% @goals.each do |goal| %>
        <li>
          <input type="checkbox" name=array[<%= counter %>]>
          <label for=<%= goal.title %>> <%= goal.title %> </label>
          <% counter+=1 %>
        </li>
      <% end %>
    </ul>
    <input type="submit" value="submit" class="btn btn-outline-dark m-3">
  </form>
</div>
