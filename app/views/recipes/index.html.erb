<div class="container text-center">
  <h1>List of recipes for <%= @food.name %></h1>
    <div class="row p-4 justify-content-center" style="margin-bottom: 32px;">
      <% counter = 0 %>
      <% @recipes.each do |recipe| %>
        <div class="card card-recipe" data-toggle="modal" data-target="#exampleModalLong-<%= counter %>">
          <%= image_tag "recipe.png" %>
          <div class="card-body text-center">
            <h4 class="card-title p-3 m-0 border-bottom"><%= recipe.title %></h4>
            <div class="row py-3 m-0 justify-content-center">
              <p class="border-right px-2"><%= recipe.cooking_time %> min</p>
              <div class="px-2">
                <% recipe.rating.to_i.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <% counter += 1 %>
      <% end %>
    </div>
  <%= link_to "Back", foods_path, class:"btn-green"%>
</div>

<% counter = 0 %>
