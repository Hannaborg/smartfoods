<div class="container text-center">
  <h1>List of recipes with <%= @food.name %></h1>
    <div class="row p-4 mb-4 justify-content-center">
      <% counter = 0 %>
      <% @recipes.each do |recipe| %>
        <div class="card card-recipe" data-toggle="modal" data-target="#exampleModalLong-<%= counter %>">
          <%= image_tag "recipe.png" %>
          <div class="card-body text-center">
            <h4 class="card-title p-3 m-0 border-bottom"><%= recipe.title %></h4>
            <div class="p-3 m-0">
              <% recipe.rating.to_i.times do %>
                <i class="fas fa-star"></i>
              <% end %>
            </div>
          </div>
        </div>
        <% counter += 1 %>
      <% end %>
    </div>
  <%= link_to "Back", foods_path, class:"btn-green"%>
</div>

<% counter = 0 %>
<% @recipes.each do |recipe| %>
  <div class="modal fade" id="exampleModalLong-<%= counter %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header m-0 p-0">
          <%= image_tag "recipe.png", class: "card-img-top" %>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="m-3">
          <div class="row mx-2 p-3 border-bottom align-items-center justify-content-between">
            <p class="d-inline">
              <% recipe.rating.to_i.times do  %>
                <i class="fas fa-star pb-3"></i>
              <% end %>
            </p>
            <h3 class="modal-title" id="exampleModalLongTitle"><%= recipe.title %></h3>
            <!-- <p><i class="far fa-clock"> <%#=recipe.cooking_time %> min</i></p> -->
          </div>
          <div class="row m-2 py-4 border-bottom">
            <div>
              <table>
                <% recipe.ingredients.each do |ingredient| %>
                  <tr>
                    <th><%= ingredient.quantity %></th>
                    <th><%= ingredient.description %></th>
                  </tr>
                <% end %>
              </table>
            </div>
            <div class="col-1"></div>
            <ol class="p-0">
              
            </ol>
          </div>
          <div class="p-3">
            <%= recipe.description %>
          </div>
          <div class="modal-footer p-3 justify-content-between">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= link_to 'Save Recipe', recipe_favorite_recipes_path(recipe), method: :post, class: "btn btn-outline-green" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% counter += 1 %>
<% end %>
