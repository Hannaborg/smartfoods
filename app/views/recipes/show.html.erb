<h1><%= @recipe.title %></h1>
  <h3>Description:</h2>
  <p><%= @recipe.description %></p>
  <h3>Time:</h2>
  <p><%= @recipe.cooking_time %>minutes</p>
  <h3>Rating:</h2>
  <% @recipe.rating.to_i.times do  %>
    <i class="fas fa-star"></i>
  <% end %>
 
<p><%= link_to 'Save',  recipe_favorite_recipes_path(@recipe), method: :post %></p>
<p><%= link_to 'Back', food_recipes_path %></p>
